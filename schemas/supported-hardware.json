{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "title": "Supported hardware specification",
    "description": "This object must be inside an array, to query all hardwares that will be updated",

    "type": "object",

    "properties": {
        "hardware": {
            "description": "The hardware name",
            "type": "string",
            "minLength": 1
        },
        "hardware-rev": {
            "description": "The hardware revision",
            "type": "string",
            "minLength": 1
        }
    },
    "required": ["hardware"],
    "additionalProperties": false
}
